<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cartModel"
            type="woowacourse.shopping.presentation.model.CartModel" />

        <variable
            name="productListener"
            type="woowacourse.shopping.presentation.view.productlist.ProductListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_product_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="10dp"
        android:onClick="@{() -> productListener.onItemClick(cartModel.id)}">

        <ImageView
            android:id="@+id/iv_product_thumbnail"
            setImageUrl="@{cartModel.product.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/product_info_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            setText="@{cartModel.product.title}"
            app:layout_constraintEnd_toEndOf="@id/iv_product_thumbnail"
            app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/iv_product_thumbnail"
            tools:text="PET보틀-정사각형" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/product_info_text_color"
            android:textSize="16sp"
            setPrice="@{cartModel.product.price}"
            app:layout_constraintEnd_toEndOf="@id/iv_product_thumbnail"
            app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            tools:text="10,000원" />

        <woowacourse.shopping.presentation.view.custom.ProductCountView
            android:id="@+id/product_count_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/iv_product_thumbnail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

